.container {
  height: 100%;
}
.text {
  text-align: center;
  color: white;
  font-size: 56rpx;
  padding-top: 50rpx
}
.text text {
  display: block;
}

.tip {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  height: 80rpx;
  width: 80rpx
}
.tip image {
  width: 80rpx;
  height: 80rpx;
}

.pic {
  height: 650rpx;
  width: 650rpx;
  position: absolute;
  top: 50%;
  left: 50rpx;
  margin-top: -300rpx;
}
.pic image {
  width: 100%;
  height: 100%
}